{
  "name": "drinksharbour-backend",
  "version": "1.0.0",
  "description": "DrinksHarbour Multi-Tenant E-commerce Backend",
  "license": "ISC",
  "author": "",
  "type": "commonjs",
  "main": "server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node server.js",
    "dev": "nodemon -x 'node -r dotenv/config server.js'",
    "seed": "node scripts/seed.js",
    "seed:reset": "node scripts/seed.js --reset"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@xenova/transformers": "^2.17.2",
    "axios": "^1.13.4",
    "bcryptjs": "^3.0.3",
    "chalk": "^4.1.2",
    "cloudinary": "^2.9.0",
    "compression": "^1.8.1",
    "cors": "^2.8.6",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-async-handler": "^1.2.0",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.3.1",
    "googleapis": "^171.4.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.3",
    "mongoose": "^9.1.5",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "nodemailer": "^8.0.1",
    "papaparse": "^5.5.3",
    "paystack-api": "^2.0.6",
    "slugify": "^1.6.6",
    "streamifier": "^0.1.1",
    "stripe": "^20.3.1"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.2.0",
    "@types/nodemailer": "^7.0.9",
    "nodemon": "^3.0.2"
  },
  "nodemonConfig": {
    "watch": [
      "server.js",
      "config/**/*.js",
      "controllers/**/*.js",
      "middleware/**/*.js",
      "models/**/*.js",
      "routes/**/*.js",
      "services/**/*.js",
      "utils/**/*.js",
      "schemas/**/*.js"
    ],
    "ext": "js,json",
    "ignore": [
      "node_modules/**",
      "scripts/**",
      "*.log",
      ".git/**"
    ],
    "exec": "node server.js",
    "env": {
      "NODE_ENV": "development"
    },
    "restartable": "rs",
    "colours": true,
    "delay": "1000"
  }
}
